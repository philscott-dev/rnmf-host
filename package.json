{
  "name": "host",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "ios": "react-native run-ios",
    "android": "react-native run-android",
    "start": "react-native start",
    "test": "jest",
    "check:deps": "rnx-align-deps --check",
    "fix:deps": "rnx-align-deps --write --fail-if-affected",
    "clean": "rimraf node_modules && rimraf ios/Pods && rimraf android/.gradle",
    "postinstall": "npm run check:deps || (echo 'Dependencies are misaligned. Run `npm run fix:deps` to fix.' && exit 1)"
  },
  "dependencies": {
    "@react-navigation/native": "^6.0.0",
    "@rnx-kit/align-deps": "^3.2.2",
    "react": "18.3.1",
    "react-native": "0.77.2",
    "react-native-gesture-handler": "^2.19.0",
    "react-native-reanimated": "^3.12.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "15.0.1",
    "@react-native-community/cli-platform-android": "15.0.1",
    "@react-native-community/cli-platform-ios": "15.0.1",
    "@react-native/babel-preset": "0.77.2",
    "@react-native/eslint-config": "0.77.2",
    "@react-native/metro-config": "0.77.2",
    "@react-native/typescript-config": "0.77.2",
    "@types/jest": "^29.5.13",
    "@types/react": "^18.2.6",
    "@types/react-test-renderer": "^18.0.0",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "prettier": "2.8.8",
    "react-test-renderer": "18.3.1",
    "typescript": "5.0.4"
  },
  "resolutions": {
    "react": "18.3.1",
    "react-native": "0.77.2",
    "react-native-gesture-handler": "^2.19.0",
    "react-native-reanimated": "^3.12.1"
  },
  "engines": {
    "node": ">=18"
  },
  "rnx-kit": {
    "kitType": "app",              
    "alignDeps": {
      "presets": ["@rnmf/preset-host-x"],     
      "requirements": ["react-native@0.77"], 
      "capabilities": ["core", "react"]
    }
  }
}
